<h1>Professional Stylists</h1>
<hr />

@if (@Model.Count == 0)
{
  <p>There are currently no Professional Stylist :(</p>
}
else
{
  <ul>
    @foreach (var stylist in @Model)
    {
      <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></li>
    }
  </ul>

}
<form action="/stylists/delete" method="post">
  <button type="submit">Delete all Stylists</button>
</form>

<p><a href="/stylists/new">Add a new stylist</a></p>
<p><a href="/">Return to Home</a></p>
